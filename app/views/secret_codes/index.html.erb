
<h1>Secret Codes</h1>

<table>
  <thead>
    <tr>
      <th>Token</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @secret_codes.each do |secret_code| %>
      <tr>
        <td><%= secret_code.token %></td>
        <td>
          <%if secret_code.user.present?%>
            <%= secret_code.user.email %>
          <%end%>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Secret Code', secret_codes_path, method: :post %>
